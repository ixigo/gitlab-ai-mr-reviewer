{
  "version": "1.0",
  "description": "Cursor CLI configuration for AI-powered code review with cursor-agent",
  "agent": "cursor-agent",
  "rules": ["./rules/review-rules.mdc"],
  "mode": "review",
  "settings": {
    "review": {
      "type": "code_review",
      "auto_push": false,
      "create_pull_request": false,
      "commit_changes": false,
      "focus_areas": [
        "design_patterns",
        "solid_principles",
        "type_safety",
        "error_handling",
        "code_quality",
        "testing",
        "security",
        "performance",
        "accessibility"
      ],
      "severity_levels": ["critical", "moderate", "minor"],
      "output_format": "markdown",
      "include_suggestions": true,
      "include_grading": true,
      "include_code_examples": true,
      "include_metrics_table": true
    },
    "analysis": {
      "max_method_complexity": 15,
      "max_component_lines": 200,
      "check_unused_imports": true,
      "check_wildcard_imports": true,
      "check_thread_safety": true,
      "check_defensive_copying": true,
      "validate_design_patterns": true,
      "validate_solid_principles": true,
      "check_react_hooks_rules": true,
      "check_type_safety": true,
      "check_accessibility": true,
      "check_security": true
    },
    "typescript": {
      "strict_mode": true,
      "no_any_type": true,
      "require_type_guards": true,
      "check_readonly": true,
      "validate_async_handling": true
    },
    "react": {
      "validate_hooks_dependencies": true,
      "check_component_size": true,
      "check_memoization": true,
      "check_error_boundaries": true
    },
    "nextjs": {
      "validate_server_client_components": true,
      "check_data_fetching": true,
      "check_metadata": true,
      "validate_api_routes": true
    },
    "output": {
      "verbose": true,
      "show_file_paths": true,
      "group_by_severity": true,
      "include_line_numbers": true,
      "include_context": true,
      "show_fixes": true
    },
    "ai": {
      "model": "claude-sonnet-4.5",
      "temperature": 0.2,
      "max_tokens": 8000,
      "stream": false,
      "context_window": 100000
    }
  },
  "exclusions": {
    "file_patterns": [
      "*.class",
      "*.jar",
      "*.map",
      "*.min.js",
      "*.bundle.js",
      "target/**",
      "build/**",
      "dist/**",
      ".next/**",
      "node_modules/**",
      ".git/**",
      "coverage/**",
      "*.test.ts",
      "*.test.tsx",
      "*.spec.ts",
      "*.spec.tsx",
      "mocks/**",
      "__tests__/**"
    ],
    "directories": [
      "target",
      "build",
      "dist",
      ".next",
      ".git",
      "node_modules",
      "coverage",
      "public",
      ".cursor"
    ]
  },
  "integrations": {
    "gitlab": {
      "enabled": true,
      "post_comments": true,
      "create_issues": false,
      "auto_approve": false,
      "block_on_critical": true
    },
    "sonarqube": {
      "enabled": false
    }
  }
}
